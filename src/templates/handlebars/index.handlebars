<!doctype html>
<html lang="en-US">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{htmlWebpackPlugin.options.title}}</title>
    <link href="/dist/assets/css/app.bundle.css" rel="stylesheet">

    <script type="text/javascript" src="/dist/vendor.bundle.js"></script>
    <script type="text/javascript" src="/dist/app.bundle.js"></script>
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body>
    {{{htmlWebpackPlugin.options.header}}}

    <!-- Example of inline partials -->
    {{#* inline "fullName"}}{{htmlWebpackPlugin.options.firstName}} {{htmlWebpackPlugin.options.lastName}}{{/inline}}
    <!-- <h1>Hello {{> fullName}}</h1>-->

    <div class="wrapper">
        <div class="container">

            <!-- START: Display list of Posts -->
            {{#if htmlWebpackPlugin.options.posts}}
            <ul>
            {{#each htmlWebpackPlugin.options.posts}}
            <li><a href="/dist/pages{{path}}.html">{{title}}</a></li>
            {{/each}}
            </ul>
             {{/if}}
            <!-- END: Display list of Posts -->

            {{{htmlWebpackPlugin.options.bodyHTML}}}
        </div>
    </div>

    {{{htmlWebpackPlugin.options.footer}}}

</body>

</html>
